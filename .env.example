# Orderly - Environment Variables
# Copy this file to .env and fill with your values

# Environment
ENV=development

# CORS - Comma-separated origins or * for all
CORS_ORIGINS=*

# Database Configuration
DATABASE_URL=postgresql+asyncpg://orderly:orderly@localhost:5432/orderly
POSTGRES_DB=orderly
POSTGRES_USER=orderly
POSTGRES_PASSWORD=orderly
POSTGRES_PORT=5432

## RabbitMQ Configuration
RABBITMQ_URL=amqp://orderly:orderly@localhost:5672/
RABBITMQ_DEFAULT_USER=orderly
RABBITMQ_DEFAULT_PASS=orderly
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15671

## Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=orderly
REDIS_DB=0
REDIS_URL=redis://:orderly@localhost:6379/0

## Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_AUTH_REQUESTS=5
RATE_LIMIT_AUTH_WINDOW=60
RATE_LIMIT_GLOBAL_REQUESTS=100
RATE_LIMIT_GLOBAL_WINDOW=60

## JWT SETTINGS
JWT_SECRET_KEY=change-me
JWT_ALGORITHM=HS256
JWT_EXPIRATION_TIME=60
JWT_REFRESH_EXPIRATION_DAYS=7